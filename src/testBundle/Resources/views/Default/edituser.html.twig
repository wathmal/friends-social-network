{% extends '::base.html.twig' %}

{% block title %}edit profile{% endblock %}
{% block stylesheets %}


{% endblock %}

{% block container %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    {#{{ dump(user) }}#}

    <div class="row">
        <div class="form-group col-lg-4 col-md-6 col-sm-8 col-xs-12 col-lg-offset-4 col-md-offset-3 col-sm-offset-2">
            <label for="form_name">{{ 'edituser.name'|trans }}</label>
            {{ form_widget(form.name,{ 'attr': {'placeholder': 'name', 'class':'form-group'} }) }}
            
            <label for="form_description">{{ 'edituser.description'|trans }}</label>
            {{ form_widget(form.description,{ 'attr': {'placeholder': 'description', 'class':'form-group'} }) }}
            
            <label for="form_picture">{{ 'edituser.picture.link'|trans }}</label>
            {{ form_widget(form.picture,{ 'attr': {'placeholder': 'link to a picture', 'class':'form-group'} }) }}

            {#
            {{ form_widget(form.email,{ 'attr': {'placeholder': 'email', 'class':'form-group'} }) }}
            {{ form_widget(form.plainpassword,{ 'attr': {'placeholder': 'password', 'class':'form-group'} }) }}
            #}

            {{ form_widget(form.save,{'attr':{'class':'btn btn-success'} }) }}

        </div>

    </div>



    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    {#set active <li> in nav bar#}
    <script type="text/javascript">
        $(document).ready(function () {
            $(".nav li").removeClass("active");
            $("#profilenav").addClass("active");
            
        });



    </script>
{% endblock %}