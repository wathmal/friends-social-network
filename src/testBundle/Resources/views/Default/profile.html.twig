{% extends '::base.html.twig' %}

{% block title %}profile{% endblock %}

{% block container %}


    <div class="row">
        <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
            <div class="thumbnail">
                <img src="{{ picture }}" alt="{{ name }}">
                <div class="caption">
                    <h3>{{ name }}</h3>
                    <p>{{ description }}</p>
                    <p></p>
                    
                    <a href="/profile/edituser" class="btn btn-primary" role="button">edit profile</a> 
                    <a href="/profile/edit" class="btn btn-warning " role="button">edit credentials</a> 
                    <br><br>
                    <a href="/profile/change-password" class="btn btn-danger" role="button">change password</a> 

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            $(".nav li").removeClass("active");
            $("#profilenav").addClass("active");

        });



    </script>
{% endblock %}